extends layout

block content
    h1 Books
    p
        a.button(href= 'books/new') Create New Book 

    br 

    form(action=`/books` method="post")
        p
            input(name="search" type="text" id="searchInput")
            input(type="submit" value="Search" id="searchBtn")

    table 
        thead 
            tr 
                th Title 
                th Author 
                th Genre 
                th Year
        tbody 
        each book in books.rows
            - i++;
            tr
                td
                    a(href= `books/${book.id}`)= book.title
                td= book.author
                td= book.genre 
                td= book.year
    br
    p
        - var n = 0;
        while n < books.count
            - n+=5
            form(action=`/books` method="get")
                input(type="submit" value=n/5 id="pageBtn" name="page")
    br
    p 
        a.button(href="/books") Clear Search